<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <title>The Library</title>
  </head>
  <body>
    <div class="container">
      <h1>Authors</h1>
      <hr />
      <h2>Add an author for a book</h2>
      <form action="/Librarian/Author" method="post">
        <label>Author Name: </label>
        <input type="text" name="author-name">
        <label>For Book: </label>
        <select name="book-name" type="text">
          @if (Model["bookList"].Count > 0 )
          {
            @foreach (var book in @Model["bookList"])
            {
              <option value="@book.GetId()">@book.GetTitle()</option>
            }
          }

        </select>
        <button type="submit">ADD</button>
      </form>
      <hr />
      <h2>Author List</h2>

        @if(Model != null)
        {
          <ul>
            @foreach(var author in Model["authorList"])
            {
              <li>@author.GetAuthor()</li>
            }
          </ul>
        }
      <h3><a href="/Librarian">Back</a></h3>
    </div>
  </body>
</html>
