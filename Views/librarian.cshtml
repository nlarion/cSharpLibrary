<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <title>The Library</title>
  </head>
  <body>
    <div class="container">
      <h1>Welcome Librarian!</h1>
      <hr />
      <h2>Search For a Book by Title</h2>
      <form action="/Librarian" method="post">
        <input type="text" name="title">
        <button type="submit" name="button">Search</button>
      </form>
      <br>
      @if(Model != null)
      {
        <ul>
          @foreach(var book in Model)
          {
            <li>@book.GetTitle(), due @book.GetDueDate().ToString("d")</li>
          }
        </ul>
      }
      <h3><a href="/Librarian/Book">Book Menu</a></h3>
      <h3><a href="/Librarian/Author">Author Menu</a></h3>
      <h3><a href="/Librarian/OverDue">Overdue Menu</a></h3>
      <h3><a href="/">Go Home</a></h3>
    </div>
  </body>
</html>
